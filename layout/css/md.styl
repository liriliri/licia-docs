.md
    color: #5f5f5f
    h1
        font-size: 1.8em
    h2
        font-size: 2em
        margin: 0.5em 0
    h1, h2, h3, h4
        color $pri-color
    h1, h2
        padding-bottom 0.3em
        border-bottom 2px solid $gray
    p
        font-size 16px
        font-weight 400
        line-height 28px
    pre
        background $pri-color
        padding 1em 1.5em
        overflow-y auto
        font-size 0.8em
    blockquote
        border-left 4px solid $pri-color
        background #f5f6f7
        margin 5px 0
        padding 8px 16px
        p
            margin 5px 0
    summary
        cursor pointer
        outline none        
    ul
        padding-left 40px
        list-style-type disc
    li
        padding-top 10px    
    strong
        color $pri-color
    a
        color $pri-color
        text-decoration underline
    img
        width 100%

@media (max-width $container-width)
    .md
        p
            font-size 14px