#input-modules
  width 100%
  margin-top 25px
  margin-bottom 15px
  outline none
  padding 10px
  border 2px solid $gray
  font-family $font-family
  resize vertical
  appearance none

#build-btn, #download-btn, #clear-btn
  background #fff
  margin-right 15px
  font-size 13px

#build-logger
  margin 25px 0
  li
    margin-bottom 10px
    color $pri-color
    font-size 14px

#build-modules
  margin 25px 0
  &:after
    content ''
    display block
    clear both
  li
    float left
    color $pri-color
    margin-right 4px
    margin-top 4px
    padding 2px 4px  
    font-size 12px
    cursor pointer
    opacity .6
    &:hover
      text-decoration underline
      opacity 1