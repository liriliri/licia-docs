*
    box-sizing border-box

html, body
    height 100%

html, body, header, footer, ul
    padding 0
    margin 0

body
    font-family $font-family

ul
    list-style none

a
    text-decoration none

// Needed to implement sticky footer.
.content-wrapper
    min-height 100%
    padding-bottom $footer-height
    overflow auto

.container
    width: $container-width
    padding 0
    margin 0 auto

.hidden
    display none

@media (max-width $container-width)
    .container
        width 100%
        &.mobile
            padding 1em 1.4em !important

